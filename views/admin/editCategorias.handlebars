<h3>Editar categoria</h3>
<form class="card" action="/admin/categorias/edit" method="post">
  <input type="hidden" id="id" name="id" value="{{categoria._id}}"></input>
  <label for="nome">Nome:</label>
  <input class="form-control" type="text" name="nome" id="nome" value="{{categoria.nome}}">
  <label for="slug">Slug:</label>
  <input class="form-control" type="text" name="slug" id="slug" value="{{categoria.slug}}">
  <button type="submit" class="btn btn-success mt-4">Editar categoria</button>
</form>
