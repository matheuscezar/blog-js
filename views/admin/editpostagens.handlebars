{{#each erros}}
  <div class="alert alert-danger">
    {{texto}}
  </div>
{{else}}

{{/each}}
<div class="card card-body">
<h4>Editar Postagem</h4>
  <form  action="/admin/postagem/edit" method="post">
    <input type="hidden" name="id" value="{{postagem._id}}">
    <label for="titulo">Título:</label>
    <input class="form-control" type="text" name="titulo" value="{{postagem.titulo}}" required>
    <label for="slug">Slug:</label>
    <input class="form-control" type="text" name="slug" value="{{postagem.slug}}" required>
    <label for="descricao">Descrição:</label>
    <input class="form-control" type="text" name="descricao" value="{{postagem.descricao}}" required>
    <label for="conteudo">Conteúdo:</label>
    <textarea class="form-control" name="conteudo" rows="8" cols="80" required >{{postagem.conteudo}}</textarea>
    <label for="categoria">Categoria:</label>
    <select class="custom-select" name="categoria">
        {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
    </select>
    <button class="btn btn-success mt-2" type="submit" name="button">Editar Postagem</button>
  </form>
</div>
