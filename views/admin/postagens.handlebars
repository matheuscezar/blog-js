<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
  <div class="card card-body mt-4">
    <h4>{{titulo}}</h4>
    <p>{{descricao}}</p>
    <small>{{data}}</small>
    <small>{{categoria.nome}}</small><br>
    <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar Postagem</button></a>
    <form class="" action="/admin/categorias/deletar" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
    </form>
  </div>
{{else}}
  <p>Nenhuma postagem registrado</p>
{{/each}}
