{{#each erros}}
  <div class="alert alert-danger">
    {{texto}}
  </div>
{{else}}

{{/each}}
<div class="card card-body">
<h4>Nova Postagem</h4>
  <form  action="/admin/postagens/nova" method="post">
    <label for="titulo">Título:</label>
    <input class="form-control" type="text" name="titulo" value="" required>
    <label for="slug">Slug:</label>
    <input class="form-control" type="text" name="slug" value="" required>
    <label for="descricao">Descrição:</label>
    <input class="form-control" type="text" name="descricao" value="" required>
    <label for="conteudo">Conteúdo:</label>
    <textarea class="form-control" name="conteudo" rows="8" cols="80" required></textarea>
    <label for="categoria">Categoria:</label>
    <select class="custom-select" name="categoria">
        {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
    </select>
    <button class="btn btn-success mt-2" type="submit" name="button">Criar Postagem</button>
  </form>
</div>
